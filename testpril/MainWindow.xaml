<Window x:Class="testpril.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testpril"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="LightGray">
            <TextBlock FontSize="30" FontStyle="Italic">Ресторан быстрой еды</TextBlock>
            <TextBlock FontSize="15" FontStyle="Oblique" VerticalAlignment="Center" Margin="4,117,-4,282">Лучшие ресторанные блюда со всего мира!</TextBlock>
            <Image Source="img/cezar1.jpg" VerticalAlignment="Bottom" />
            
        </Grid>
        <Grid Grid.Column="1" Background="DarkCyan">
            <Frame Grid.Row="1" x:Name="MainFrame"></Frame>
            <Button x:Name="button" Content="Меню" Click="gg" Height="50" Width="120" VerticalAlignment="Bottom" Margin="155,0,167,31"/>
        </Grid>
    </Grid>

</Window>
